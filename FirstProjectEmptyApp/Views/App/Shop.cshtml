@model IEnumerable<Product>
<h1>Shop</h1>
<p>Count: @Model.Count()</p>

<div class="row">
    @foreach (var p in Model)
    {
        <div class="product-info col-md-4">
            <div class="border bg-light rounded p-1 m-1">
                <div class="justify-content-center">
                    <img src="~/img/@(p.ArtId).jpg" class="img-fluid mx-auto d-block"  alt="@p.Title" />
                </div>
                <h3>@p.Category</h3>
                <ul class="h6">
                    <li>Price : @p.Price</li>
                    <li>Artist: @p.Artist</li>
                    <li>Title: @p.Title</li>
                    <li>Description: @p.ArtDescription</li>
                </ul>
                <button id="buyButton" class="btn btn-success">Buy</button>
            </div>
        </div>
    }
</div>